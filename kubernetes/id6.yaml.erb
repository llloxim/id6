apiVersion: v1
kind: Service
metadata:
  name: service
spec:
  selector:
    app: id6
  ports:
    - port: 80
      targetPort: 8000
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: deployment
  labels:
    app: id6
spec:
  replicas: 1
  selector:
    matchLabels:
      app: id6
  template:
    metadata:
      labels:
        app: id6
    spec:
      volumes:
        - name: config
          secret:
            secretName: id6-config
      containers:
        - name: id6
          image: "njha/id6:0.0.0-alpha5"
          env:
            - name: CONFIG_FILE_PATH
              value: "/config/config.toml"
          volumeMounts:
            - mountPath: "/config/"
              name: config
              readOnly: true
          resources:
            limits:
              memory: 256Mi
              cpu: 1
          ports:
            - containerPort: 8080
          env:
            - name: DISCORD_TOKEN
              value: <%= discord_token %>
            - name: CONFIG_FILE_PATH
              value: "/config/config.toml"
            - name: POSTGRES_CONN
              value: <%= postgres_string %>
        - name: auth
          image: "keycloak/keycloak-gatekeeper:6.0.1"
          args:
            - --client-id=id6
            - --client-secret=$(KEYCLOAK_SECRET)
            - --encryption-key=$(ENCRYPTION_KEY)
            - --redirection-url=https://discord.ocf.berkeley.edu/
            - --discovery-url=https://auth.ocf.berkeley.edu/auth/realms/ocf
            - --enable-default-deny=true
            - --enable-session-cookies
            - --listen=:8000
            - --upstream-url=http://localhost:8080
            - --resources=uri=/*
            - --headers=Host=discord.ocf.berkeley.edu
          env:
            - name: KEYCLOAK_SECRET
              valueFrom:
                secretKeyRef:
                  name: keycloak-client
                  key: secret
            - name: ENCRYPTION_KEY
              valueFrom:
                secretKeyRef:
                  name: keycloak-client
                  key: encryption_key
---
apiVersion: v1
kind: Secret
metadata:
  name: keycloak-client
type: Opaque
stringData:
  secret: <%= keycloak_secret %>
  encryption_key: <%= keycloak_encryption %>
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: virtual-host-ingress
  annotations:
    nginx.ingress.kubernetes.io/force-ssl-redirect: "true"
spec:
  rules:
    - host: discord.ocf.berkeley.edu
      http:
        paths: 
          - backend:
              serviceName: service
              servicePort: 80  

